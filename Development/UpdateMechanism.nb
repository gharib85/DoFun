Cell[BoxData[
 RowBox[{
  RowBox[{
   RowBox[{"CheckForDoFunUpdates", "[", 
    RowBox[{"quiet_:", "False"}], "]"}], ":=", 
   RowBox[{"Module", "[", 
    RowBox[{
     RowBox[{"{", 
      RowBox[{"newVersionNumbers", ",", "newVersionString"}], "}"}], ",", 
     "\[IndentingNewLine]", 
     RowBox[{
      RowBox[{"newVersionNumbers", "=", 
       RowBox[{"getLatestVersionNumbers", "[", "]"}]}], ";", 
      "\[IndentingNewLine]", 
      RowBox[{"newVersionString", "=", 
